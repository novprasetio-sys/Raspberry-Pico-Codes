# Button latched at raspberry pico

import machine
import time

button = machine.Pin(2, machine.Pin.IN, machine.Pin.PULL_UP)
led = machine.Pin(25, machine.Pin.OUT)
status = 0

while True:
    if button.value() == 0 and status == 0:
        led.value(1)
        status = 1
        while button.value() == 0:
            time.sleep(0.1)
    elif button.value() == 0 and status == 1:
        led.value(0)
        status = 0
        while button.value() == 0:
            time.sleep(0.1)
    time.sleep(0.1)